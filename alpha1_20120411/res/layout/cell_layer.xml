<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="150dp"
	android:layout_height="130dp"
	android:background="#19000000">
	<ImageView android:id="@+id/cell_img"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:src="@drawable/cell_bg"
		android:scaleType="centerCrop"/>
	<TextView android:id="@+id/cell_text"
		android:layout_height="27dp"
		android:layout_width="0dp"
		android:layout_alignLeft="@id/cell_img"
		android:layout_alignTop="@id/cell_img"
		android:layout_alignRight="@id/cell_img"
		android:paddingLeft="8dp"
		android:paddingTop="0dp"
		android:paddingRight="0dp"
		android:paddingBottom="0dp"
		android:singleLine="true"
		android:gravity="center_vertical"
		android:background="#99000000"
		android:textSize="14sp"
		android:text="互联网那点事"/>
	<ImageButton android:id="@+id/cell_del"
		android:layout_width="26dp"
		android:layout_height="26dp"
		android:layout_alignParentRight="true"
		android:padding="0dp"
		android:layout_marginTop="1dp"
		android:layout_marginRight="3dp"
		android:background="@drawable/cell_del_icon"
		android:visibility="gone"/>
</RelativeLayout>